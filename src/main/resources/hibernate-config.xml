<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.spatial.dialect.postgis.PostgisDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">false</property>
        <property name="hibernate.use_sql_comments">false</property>
        <property name="hibernate.connection.pool_size">10</property>

        <mapping class="com.mmontes.model.entity.TIP.TIP"/>
        <mapping class="com.mmontes.model.entity.TIP.TIPtype"/>
        <mapping class="com.mmontes.model.entity.City"/>
        <mapping class="com.mmontes.model.entity.Admin"/>
        <mapping class="com.mmontes.model.entity.Comment"/>
        <mapping class="com.mmontes.model.entity.Favourite"/>
        <mapping class="com.mmontes.model.entity.UserAccount"/>
        <mapping class="com.mmontes.model.entity.Rating"/>
        <mapping class="com.mmontes.model.entity.route.Route"/>
        <mapping class="com.mmontes.model.entity.route.RouteTIP"/>
        <mapping class="com.mmontes.model.entity.route.RouteTIPId"/>
        <mapping class="com.mmontes.model.entity.Config"/>
        <mapping class="com.mmontes.model.entity.OSM.OSMKey"/>
        <mapping class="com.mmontes.model.entity.OSM.OSMType"/>
    </session-factory>
</hibernate-configuration>